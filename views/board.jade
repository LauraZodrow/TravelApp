extends layout

block stylesheets
	link(href="/stylesheets/map.css" rel="stylesheet")
	link(rel="stylesheet" type="text/css" href="stylesheets/board.css")

block content
	h1.reviews-title Reviews
	.board-nav
		ul.row
			li.col-md-2.school-nav
				//- i.fa.fa-pencil.fa-lg
				.school-text School
			li.col-md-2.food-nav
				//- i.fa.fa-cutlery.fa-lg
				.food-test Food
			li.col-md-2.hostels-nav 
				//- i.fa.fa-home.fa-lg
				.hostels-text Hostels
			li.col-md-2.museums-nav
				//- i.fa.fa-university.fa-lg
				.museums-text Museums
			li.col-md-2.pubs-nav 
				//- i.fa.fa-beer.fa-lg
				.pubs-text Pubs
			li.col-md-2
				i.fa.fa-plus.addToBoardBtn Create a Review
	.row
		form#boardForm.col-md-6.col-md-offset-3
			select#boardSelect.form-control
				option Schools
				option Food
				option Hostels
				option Museums
				option Pubs
			.inputWrapper
				input(type="text" name="location" placeholder="Place").locationInput
				input(type="text" name="details" placeholder="Comments").detailsInput
				input(type="text" name="city" placeholder="City").cityInput
				input(type="text" name="country" placeholder="Country").countryInput
				input(type="submit").submitInput
				.closeButton Close

	div#board-list

	button.btn.btn-primary.btn-lg.modalButton(data-toggle='modal', data-target='#myModal')
		|Add to Timeline
	//- Modal 
	#myBoardModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
		.modal-dialog
			.modal-content
				.modal-header
					button.close(type='button', data-dismiss='modal')
						span(aria-hidden='true') Ã—
						span.sr-only Close
				.modal-body
					| Where do you want to pin this board?
					select.form-control.form-cities
						ul
							for cities in myLibrary
								option(value='#{cities._id}') #{cities.location}
				.modal-footer
					button.btn.btn-default(type='button', data-dismiss='modal') Close
					button.btn.btn-primary.addButton(type='button') Add

block scripts
	script(src="/js/board.js")
	script(src="/js/account-timeline.js")