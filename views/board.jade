extends layout

block stylesheets
	link(href="/stylesheets/map.css" rel="stylesheet")
	link(rel="stylesheet" type="text/css" href="stylesheets/board.css")

block content
	.board-nav
		ul.row
			li.col-md-3.school-nav
				i.fa.fa-pencil.fa-2x
				.school-text School
			li.col-md-2.food-nav
				i.fa.fa-cutlery.fa-2x
				.food-test Food
			li.col-md-2.hostels-nav 
				i.fa.fa-home.fa-2x
				.hostels-text Hostels
			li.col-md-2.museums-nav
				i.fa.fa-university.fa-2x
				.museums-text Museums
			li.col-md-3.pubs-nav 
				i.fa.fa-beer.fa-2x
				.pubs-text Pubs

		h1 Activities Board
	button.addToBoardBtn Create a Review
	form#boardForm
		input(type="text" name="location" placeholder="Location")
		input(type="text" name="details" placeholder="Comments")
		input(type="text" name="city" placeholder="City")
		input(type="text" name="country" placeholder="Country")
		input(type="submit")
		select#boardSelect.form-control
			option Schools
			option Food
			option Hostels
			option Museums
			option Pubs

	div#board-list

	button.btn.btn-primary.btn-lg.modalButton(data-toggle='modal', data-target='#myModal')
		|Add to Timeline
	//- Modal 
	#myBoardModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
		.modal-dialog
			.modal-content
				.modal-header
					button.close(type='button', data-dismiss='modal')
						span(aria-hidden='true') Ã—
						span.sr-only Close
				.modal-body
					| Where do you want to pin this board?
					select.form-control
						ul
							for cities in myLibrary
								option(data-id='#{cities._id}') #{cities.location}
				.modal-footer
					button.btn.btn-default(type='button', data-dismiss='modal') Close
					button.btn.btn-primary.addButton(type='button') Add

block scripts
	script(src="/js/board.js")