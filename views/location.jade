extends layout

block stylesheets
	link(href="/stylesheets/map.css" rel="stylesheet")
	link(rel="stylesheet" type="text/css" href="/stylesheets/account.css")


block content
	script.
		var currentlocation = '#{location}';
	#map-canvas
	input#pac-input.controls(type='text', placeholder='Search Box')
	h2.city-name #{myLibrary.location}
	.timelineWrapper(data-id=location)
	.readMore Read More
	.readLess Read Less
	h2.city-name #{myLibrary.location} Board
	.row
		.col-md-3.customBoardSchoolsWrapper
			.customBoardSchools
		.col-md-1
		.col-md-3.customBoardMuseumsWrapper
			.customBoardMuseums
		.col-md-1
		.col-md-3.customBoardPubsWrapper
			.customBoardPubs

	button.btn.btn-primary.btn-lg.modalButton(data-toggle='modal', data-target='#myModal')
		|Add to Timeline
	//- Modal 
	#myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
		.modal-dialog
			.modal-content
				.modal-header
					button.close(type='button', data-dismiss='modal')
						span(aria-hidden='true') Ã—
						span.sr-only Close
				.modal-body
					| Add to Timeline
				.modal-footer
					button.btn.btn-default(type='button', data-dismiss='modal') Close
					button.btn.btn-primary.addButton(type='button') Add


block scripts
	script(src="/js/map.js")
	script(src="/js/location-timeline.js")