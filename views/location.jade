extends layout

block stylesheets
	link(href="/stylesheets/map.css" rel="stylesheet")
	link(rel="stylesheet" type="text/css" href="/stylesheets/account.css")


block content
	#map-canvas
	input#pac-input.controls(type='text', placeholder='Search Box')
	h2.city-name #{myLibrary.location}
	//- .col-md-12.timelineLine
	//- 	h2.timelineTitle
	//- 	img(src="/images/timeline-line.png")
	//- 	.placeMarkerImageWrapper
	.row
		.col-md-10.col-md-offset-2.timelineDetails(data-id=location)


	button.btn.btn-primary.btn-lg.modalButton(data-toggle='modal', data-target='#myModal')
		|Add to Timeline
	//- Modal 
	#myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
		.modal-dialog
			.modal-content
				.modal-header
					button.close(type='button', data-dismiss='modal')
						span(aria-hidden='true') Ã—
						span.sr-only Close
				.modal-body
					| Add to Timeline
				.modal-footer
					button.btn.btn-default(type='button', data-dismiss='modal') Close
					button.btn.btn-primary.addButton(type='button') Add


block scripts
	script(src="/js/map.js")
	script(src="/js/location-timeline.js")